@{
    ViewData["Title"] = "Index";
    var accounts = ViewBag.accounts;
}
<div class="row">
    @foreach(var account in accounts)
    {
        <div class="col-md-4">
        <div class="thumbnail">
            <img class="h-50 w-50" src="@account.Avatar" alt="">
            <div class="caption">
                    <h3>@account.Name</h3>
                <p>
                    @account.Bio
                </p>
                <p>
                        <a asp-asp-controller="profile" asp-route-id="@account.Id" class="btn btn-success btn-block">Profile</a>
                </p>
                </div>
            </div>
        </div>
    }

</div>
