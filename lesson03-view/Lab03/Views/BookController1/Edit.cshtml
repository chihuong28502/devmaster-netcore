
@model Lab03.Models.Book
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form action="" method="POST" role="form">
    <div class="form-group">
        <label asp-for="Title">Tên sách</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Tên sách" />
    </div>
    <div class="form-group">
        <label asp-for="AuthorId">Tác giả</label>
        <select asp-for="AuthorId" class="form-control" asp-items="@ViewBag.Authors">
            <option value="">Chọn tác giả</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="GenerId">Thể loại</label>
        <select asp-for="GenerId" class="form-control" asp-items="@ViewBag.Genres">
            <option value="">Chọn thể loại</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Price">Giá</label>
        <input type="text" class="form-control" asp-for="Price" placeholder="Giá" />
    </div>
    <div class="form-group">
        <label asp-for="TotalPage">TotalPage</label>
        <input type="text" class="form-control" asp-for="TotalPage" placeholder="Tổng trang" />
    </div>
    <div class="form-group">
        <label asp-for="Image">Up ảnh</label>
        <input type="file" class="form-control" asp-for="Image" placeholder="Tổng trang" />
    </div>
    <div class="form-group">
        <label asp-for="Summary">Giới thiệu ngắn</label>
        <textarea class="form-control" asp-for="Summary" placeholder="Nd giới thiệu sách ...." ></textarea>
    </div>
    <button type="button" class="btn btn-primary">Lưu lại</button>
</form>

