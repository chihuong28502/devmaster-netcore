
@{
    ViewData["Title"] = "Products";
    var list = ViewData["list"] as List<Product>;
}

<h1>product list</h1>
<table class="table table-bordered">
    <thead>
        <tr>ID</tr>
        <th>Name</th>
    </thead>
    <tbody>
        @foreach (var item in list)
        {
               <tr>
                   <td>
                       @item.Id
                   </td>
                <td>
                    @item.Name
                </td>
               </tr>
        }
    </tbody>
</table>

