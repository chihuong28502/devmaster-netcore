
@{
    ViewData["Title"] = "Profile";
    var account = ViewBag.account;
}

<h2>Profile</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@account.Avatar" />
    </div>
    <div class="col-md-8">
        <h2>Name: @account.Name</h2>
        <h3>Email: @account.Email</h3>
        <h3>Address: @account.Address</h3>
        <h3>Bio: @account.Bio</h3>
        <h3>Gender: 
            @if (@account.Gender == 1)
            {
                <span>Male</span>
            } else
            {
                <span>FaMale</span>
            }
        </h3>
         <h3>BirthDay: @account.Birthday</h3>
        <p>
            <a asp-asp-controller="Account" asp-action="Index" class="btn btn-sm btn-danger">
                Back
            </a>
        </p>
     </div>
</div>

